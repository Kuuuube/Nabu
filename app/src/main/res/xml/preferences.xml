<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="@string/font_size_small"
        android:dialogTitle="@string/font_size"
        android:entries="@array/settings_fontsize"
        android:entryValues="@array/settings_fontsize"
        android:key="settings_fontsize"
        android:summary="%0$s"
        android:title="@string/font_size" />

    <ListPreference
        android:defaultValue="@string/font_type_default"
        android:dialogTitle="@string/dyslexia_friendly_font"
        android:entries="@array/settings_fonttype"
        android:entryValues="@array/settings_fonttype"
        android:key="settings_fonttype"
        android:summary="%0$s"
        android:title="@string/dyslexia_friendly_font" />

    <ListPreference
        android:defaultValue="@string/theme_default"
        android:dialogTitle="@string/theme"
        android:entries="@array/settings_theme"
        android:entryValues="@array/settings_theme"
        android:key="settings_theme"
        android:summary="%0$s"
        android:title="@string/theme" />

    <ListPreference
        android:defaultValue="@string/backup_default"
        android:dialogTitle="@string/backup"
        android:entries="@array/settings_backup"
        android:entryValues="@array/settings_backup"
        android:key="settings_backup"
        android:summary="%0$s"
        android:title="@string/backup" />

</PreferenceScreen>
